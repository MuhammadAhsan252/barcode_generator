<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% content_for :title, "Barcodes" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-4">
    <i class="bi bi-upc-scan me-3"></i>Barcodes
  </h1>
  <%= link_to new_barcode_path, class: "btn btn-primary btn-lg" do %>
    <i class="bi bi-plus-circle me-2"></i>New Barcode
  <% end %>
</div>

<div id="barcodes">
  <% if @barcodes.any? %>
    <div class="row">
      <% @barcodes.each do |barcode| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <%= render barcode %>
          <div class="text-center">
            <%= link_to "View Details", barcode, class: "btn btn-outline-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-inbox display-1 text-muted"></i>
      <h3 class="mt-3 text-muted">No barcodes yet</h3>
      <p class="text-muted">Create your first barcode to get started!</p>
      <%= link_to "Create Barcode", new_barcode_path, class: "btn btn-primary btn-lg mt-3" %>
    </div>
  <% end %>
</div>
