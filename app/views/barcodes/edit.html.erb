<% content_for :title, "Editing barcode" %>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="d-flex align-items-center mb-4">
      <%= link_to @barcode, class: "btn btn-outline-secondary me-3" do %>
        <i class="bi bi-arrow-left"></i>
      <% end %>
      <h1 class="display-5 mb-0">
        <i class="bi bi-pencil me-3"></i>Editing Barcode
      </h1>
    </div>

    <div class="card">
      <div class="card-body">
        <%= render "form", barcode: @barcode %>
      </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <%= link_to @barcode, class: "btn btn-outline-primary me-2" do %>
        <i class="bi bi-eye me-2"></i>View Barcode
      <% end %>
      <%= link_to barcodes_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-list me-2"></i>All Barcodes
      <% end %>
    </div>
  </div>
</div>
