<% content_for :title, "New barcode" %>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="d-flex align-items-center mb-4">
      <%= link_to barcodes_path, class: "btn btn-outline-secondary me-3" do %>
        <i class="bi bi-arrow-left"></i>
      <% end %>
      <h1 class="display-5 mb-0">
        <i class="bi bi-plus-circle me-3"></i>New Barcode
      </h1>
    </div>

    <div class="card">
      <div class="card-body">
        <%= render "form", barcode: @barcode %>
      </div>
    </div>
  </div>
</div>
